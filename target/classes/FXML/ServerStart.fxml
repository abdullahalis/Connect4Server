<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox xmlns:fx="http://javafx.com/fxml/1" styleClass="vbox" fx:controller = "MyController"
      fx:id = "root" alignment="CENTER">
    <Text text="Enter a port number" fx:id="title" ></Text>
    <TextField fx:id="portField"></TextField>
    <Button fx:id="submitButton" text="Submit" onAction="#setPort"></Button>
</VBox>
